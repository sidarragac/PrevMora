BACKEND_SERVER_PORT=8000
BACKEND_SERVER_WORKERS=1

# ===== CORS CONFIGURATION =====
IS_ALLOWED_CREDENTIALS=true
# Solo necesario para producci√≥n (ENVIRONMENT=production)
